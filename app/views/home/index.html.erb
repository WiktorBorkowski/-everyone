<% content_for :title, "@everyone" %>

<canvas
    id="flow-canvas"
    class="flow-canvas"
    data-controller="flow"
    aria-hidden="true"
></canvas>

<a href="/" class="logo-container" aria-label="@everyone home">
    <%= image_tag "logo-with-text.png", alt: "@everyone logo", class: "logo" %>
</a>

<main class="landing">
    <section class="landing__content">
        <h1>Reach your trusted people faster.</h1>
        <p>
            Setup a one-click call button for your inner circle. Everyone
            receives a simultaneous call, the first person to answer will
            connect to you as fast as possible. No app necessary for them. Made
            for the moment you need it.
        </p>
        <%= link_to "Set up your circle", signup_path, class: "landing__cta" %>
    </section>
</main>
